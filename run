#!/usr/bin/env bash

set -euo pipefail
THISDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

TESTS=('unit' 'integration')
function help(){
cat << EOF
uv-fasthtml

help                        : Display help text
restore                     : Fetch dependencies
serve                       : Spawn a server
lint                        : Run linter
test <unit|integration|all> : Run tests, defaults to all
EOF
}

function run_restore(){
	uv sync
	(test -f "$THISDIR/database/database.sqlite3" || uv run fastmigrate_create_db)
	sqlite3 "$THISDIR/database/database.sqlite3" "PRAGMA journal_mode=WAL;"
	uv run fastmigrate_run_migrations
}

function run_serve(){
	uv run fastmigrate_run_migrations
	uv run app/main.py
}

function run_lint(){
	uv run ruff check
}

function run_unit(){
	uv run pytest tests/unit
}

function run_integration(){
	uv run pytest tests/integration
}

function run_test(){
  scope=${1-all}
	case "$scope" in
		all)
				run_unit
				run_integration
				;;
		unit)
				run_unit
				;;
		integration)
				run_integration
				;;
		esac
}

function main(){
	cmd=${1-default}
	shift || true
	case "$cmd" in
		default|help)
			help "$@"
			;;
		restore)
			run_restore
			;;
		serve)
			run_serve
			;;
		lint)
			run_lint
			;;
		test)
			run_test "$@"
			;;
		*)
			echo "no-op $cmd"
			;;
	esac
}

main "$@"
